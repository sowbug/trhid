{
  "manifest_version": 2,
  "name": "Trezor Proof of Concept",
  "short_name": "TrezorPOC",
  "description": "Proof of concept of Chrome App that communicates with Trezor (not affiliated with Trezor manufacturer)",

  "minimum_chrome_version": "38.0.2125.7",

  "version": "0.0.1.0",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    "hid",
		{
			"usbDevices": [
				{ "vendorId": 21324, "productId": 1 }
 			]
		}
	]
}
